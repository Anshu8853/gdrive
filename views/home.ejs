<!doctype html>
<html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>

<body>
    <main class="p-4 bg-gray-100 dark:bg-gray-800 min-h-screen w-screen">
        <div id="upload-success-notification" class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">File uploaded successfully.</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <svg onclick="dismissNotification('upload-success-notification')" class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
            </span>
        </div>
        <div id="delete-success-notification" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">File deleted successfully.</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <svg onclick="dismissNotification('delete-success-notification')" class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
            </span>
        </div>
        <div class="text-center">
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">Welcome, <%= user.username %>!</h1>
            <div>
                <button
                    onclick="showPopUp()"
                    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2">
                    upload file
                </button>
                <a href="/user/logout" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                    Logout
                </a>
                <% if (user.role === 'admin') { %>
                    <a href="/admin/dashboard" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded ml-2">
                        Admin Dashboard
                    </a>
                <% } %>
            </div>
        </div>
        <div class="mt-8">
            <h2 class="text-xl font-bold text-gray-800 dark:text-white mb-4 text-center">Your Uploaded Files:</h2>
            <% if (user.file && user.file.length > 0) { %>
                <div class="max-w-md mx-auto bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
                    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
                        <% user.file.forEach(function(publicId) { %>
                            <li class="p-4 flex justify-between items-center">
                                <a href="https://res.cloudinary.com/<%= cloudinaryCloudName %>/image/upload/<%= publicId %>" target="_blank" class="text-blue-600 hover:underline dark:text-blue-500">
                                    <%= publicId %>
                                </a>
                                <form action="/user/delete-file" method="POST">
                                    <input type="hidden" name="filename" value="<%= publicId %>">
                                    <button type="submit" class="text-red-600 hover:underline dark:text-red-500">Delete</button>
                                </form>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            <% } else { %>
                <p class="text-gray-500 dark:text-gray-400 text-center">You haven't uploaded any files yet.</p>
            <% } %>
        </div>
        <div class="pop hidden backdrop-blur fixed top-0 left-0 h-screen w-screen flex items-center justify-center">
            <form action="/user/upload" method="post" enctype="multipart/form-data">
                <div class="flex items-center justify-center w-96">
                    <label for="dropzone-file"
                        class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
                            </svg>
                            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span>
                                or drag and drop</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
                        </div>
                        <input id="dropzone-file" type="file" class="hidden" 
                       name="file"
                        />
                    </label>
                </div>
                <button
                type="submit"
                class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mt-4"
                >
                    Upload file
                </button>
            </form>
            <button
            class="absolute top-4 right-4 text-gray-500 dark:text-gray-400 text-xl"
            onclick="hidePopUp()">
            <i class="ri-close-line"></i>
            </button>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
    <script> 
        function showPopUp(){
            document.querySelector('.pop').style.display = 'flex'
          
        }
        function hidePopUp(){
            document.querySelector('.pop').style.display = 'none'
          
        }

        function dismissNotification(id) {
            document.getElementById(id).style.display = 'none';
        }

        window.onload = function() {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('upload') && urlParams.get('upload') === 'success') {
                const notification = document.getElementById('upload-success-notification');
                notification.style.display = 'block';
                setTimeout(function() {
                    notification.style.display = 'none';
                }, 3000);
            }
            if (urlParams.has('delete') && urlParams.get('delete') === 'success') {
                const notification = document.getElementById('delete-success-notification');
                notification.style.display = 'block';
                setTimeout(function() {
                    notification.style.display = 'none';
                }, 3000);
            }
        }
    </script>
</body>

</html>